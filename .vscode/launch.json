    "version": "0.2.0",
    "configurations": [
        {
            "name": "Xdebug no Mac/Linux",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                "/var/www/html": "${workspaceFolder}"
            },
            "xdebugSettings": {
                "max_data": 65535,
                "show_hidden": 1,
                "max_children": 10000,
                "max_depth": 5
            }
        },
    ]
}
